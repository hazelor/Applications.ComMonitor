             xmlns:Map="clr-namespace:Hazelor.MapCtrl;assembly=Hazelor.MapCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tool="clr-namespace:Hazelor.Infrastructure.Tools;assembly=Hazelor.Infrastructure.Tools"
             xmlns:converter="clr-namespace:Modules.InfosDisplay.converters"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <converter:QuaulityConverter x:Key="QuaulityConverter"/>
        <converter:LineVisibleConverter x:Key="LineVisibleConverter"/>
        <converter:DashAvailableConverter x:Key="DashAvailableConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid>
            <tool:Arrow x:Name="PreTLine"
            HeadHeight="4"
            HeadWidth="10"
            StrokeThickness="2"
                        StrokeDashArray="{Binding IsPreShow, Converter={StaticResource DashAvailableConverter}}"
            Direct="False"
                        Visibility="{Binding PreIsUsed, Converter={StaticResource LineVisibleConverter}}"
                    Cursor="Hand"
                    Stroke="{Binding CommStatuPre, Converter={StaticResource QuaulityConverter}}">
                <tool:Arrow.Effect>
                    <DropShadowEffect/>
                </tool:Arrow.Effect>
